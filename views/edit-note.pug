extends layout

block content
  .edit-note-container
    h1 Editar Nota
    form(action=`/notes/edit/${note.id}` method='POST')
      .form-group
        label(for='title') TÃ­tulo:
        input(type='text' name='title' value=note.title required class='form-control')
      .form-group
        label(for='content') Contenido:
        textarea(name='content' required class='form-control')= note.content
      .form-group
        label(for='folder_id') Carpeta:
        select(name='folder_id' class='form-control')
          each folder in folders
            option(value=folder.id selected=folder.id == note.folder_id)= folder.name
      button(type='submit' class='btn btn-primary') Actualizar Nota
