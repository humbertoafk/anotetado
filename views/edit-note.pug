extends layout

block content
  .container
    h1= title
    if messages.error
      p.error= messages.error
    if messages.success
      p.success= messages.success
    form(action=`/notes/edit/${note.id}` method='POST')
      div
        label(for='title') TÃ­tulo:
        input(type='text' name='title' value=note.title required)
      div
        label(for='content') Contenido:
        textarea(name='content' required)= note.content
      div
        label(for='folder_id') Carpeta:
        select(name='folder_id')
          each folder in folders
            option(value=folder.id selected=folder.id == note.folder_id)= folder.name
      button(type='submit') Actualizar Nota
