extends layout

block content
  .form-container
    h1 Nueva Nota
    if messages.error
      .alert.alert-danger
        p= messages.error
    if messages.success
      .alert.alert-success
        p= messages.success
    form(method='POST', action='/notes/new')
      .form-group
        label(for='title') TÃ­tulo
        input#title.form-control(type='text', name='title', required)
      .form-group
        label(for='content') Contenido
        textarea#content.form-control(name='content', rows='5', required)
      .form-group
        label(for='folder') Carpeta
        select#folder.form-control(name='folder_id')
          each folder in folders
            option(value=folder.id) #{folder.name}
      button.btn.btn-primary(type='submit') Crear Nota
